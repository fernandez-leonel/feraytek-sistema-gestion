{
  "name": "feraytek-admin-desktop",
  "version": "1.0.0",
  "description": "App de escritorio Feraytek para administradores",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "backend": "node escritorio/backend/server.js",
    "electron-dev": "concurrently \"set PORT=4001&& npm run backend\" \"set BROWSER=none&& set PORT=3001&& npm start\" \"wait-on http://localhost:4001/health http://localhost:3001 && set ELECTRON_START_URL=http://localhost:3001&& npx electron .\"",
    "electron-prod": "npm run build && npx electron .",
    "electron-pack": "npm run build && electron-builder",
    "dist": "electron-builder",
    "dist-win": "electron-builder --win",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux",
    "test-flow": "node scripts/testProductoFlow.js"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.263.1",
    "multer": "^1.4.5-lts.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.2",
    "sonner": "^0.4.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.feraytek.admin-desktop",
    "productName": "Feraytek Admin",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js",
      "public/preload.js"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
